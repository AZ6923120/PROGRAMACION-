#include <iostream>
using namespace std;

int main() {
    int n;

    cout << "Cuantos valores tendra el vector? ";
    cin >> n;

    int v[n];

    cout << "Ingrese los " << n << " valores:\n";
    for (int i = 0; i < n; i++) {
        cin >> v[i];
    }

    bool esCapicua = true;

    for (int i = 0; i < n/2; i++) {
        if (v[i] != v[n - 1 - i]) {
            esCapicua = false;
            break;
        }
    }

    if (esCapicua)
        cout << "El vector ES capicua." << endl;
    else
        cout << "El vector NO es capicua." << endl;

    return 0;
}
