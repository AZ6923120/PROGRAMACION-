#include <iostream>
using namespace std;

int main() {
    int n;

    cout << "Cuantos valores tendra el vector? ";
    cin >> n;

    double v[n]; 

    cout << "Ingrese los " << n << " valores:\n";
    for (int i = 0; i < n; i++) {
        cin >> v[i];
    }

    double suma = 0;

    for (int i = 0; i < n; i++) {
        suma += v[i];
    }

    double promedio = suma / n;

    cout << "El promedio es: " << promedio << endl;

    return 0;
}
