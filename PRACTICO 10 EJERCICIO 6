#include <iostream>
using namespace std;

int main() {
    int n;

    cout << "Cuantos valores tendra el vector? ";
    cin >> n;

    double v[n];

    cout << "Ingrese los " << n << " valores:\n";
    for (int i = 0; i < n; i++) {
        cin >> v[i];
    }

    cout << "Promedios de cada 3 valores consecutivos:\n";

    for (int i = 0; i < n - 2; i++) {
        double promedio = (v[i] + v[i+1] + v[i+2]) / 3.0;
        cout << "P" << (i+1) << " = " << promedio << endl;
    }

    return 0;
}
